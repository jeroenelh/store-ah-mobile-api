{
  "name": "microit/store-ah-api",
  "homepage": "https://micro-it.nl/",
  "autoload": {
    "psr-4": {
      "Microit\\StoreAhApi\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Jeroen el Hahaoui",
      "email": "jeroen@micro-it.nl"
    }
  ],
  "require": {
    "php": "^8.2",
    "microit/store-base": "dev-main"
  },
  "require-dev": {
    "vimeo/psalm": "^5.11",
    "friendsofphp/php-cs-fixer": "^3.16",
    "phpmd/phpmd" : "@stable"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "scripts": {
    "psalm": "./vendor/bin/psalm --no-cache",
    "php-cs-fixer": "./vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php",
    "phpmd": "./vendor/bin/phpmd ./src text ./phpmd.xml"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "./vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php"
      ],
      "pre-push": [
        "./vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php --dry-run"
      ],
      "post-merge": "composer update"
    }
  }
}
